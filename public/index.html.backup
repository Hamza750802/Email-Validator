    <script>
    <script>
        const fileInput = document.getElementById('csvFile');
        const dropZone = document.getElementById('dropZone');
        const fileName = document.getElementById('fileName');
        const fileSelected = document.getElementById('fileSelected');
        const selectedFileName = document.getElementById('selectedFileName');
        const selectedFileSize = document.getElementById('selectedFileSize');
        const removeFile = document.getElementById('removeFile');
        const validateBtn = document.getElementById('validateBtn');
        const skipSmtp = document.getElementById('skipSmtp');
        const progress = document.getElementById('progress');
        const progressBar = document.getElementById('progressBar');
        const progressText = document.getElementById('progressText');
        const results = document.getElementById('results');
        const statsGrid = document.getElementById('statsGrid');
        const downloadBtn = document.getElementById('downloadBtn');
        const errorDiv = document.getElementById('error');

        let currentFile = null;

        // File input change
        fileInput.addEventListener('change', (e) => {
            handleFileSelect(e.target.files[0]);
        });

        // Remove file
        removeFile.addEventListener('click', () => {
            clearFileSelection();
        });

        // Drag and drop
        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.classList.add('dragging');
        });

        dropZone.addEventListener('dragleave', () => {
            dropZone.classList.remove('dragging');
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.classList.remove('dragging');
            const file = e.dataTransfer.files[0];
            if (file && file.name.endsWith('.csv')) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelect(file);
            }
        });

        function handleFileSelect(file) {
            if (!file) return;
            
            currentFile = file;
            selectedFileName.textContent = file.name;
            selectedFileSize.textContent = formatFileSize(file.size);
            fileSelected.classList.add('active');
            fileName.textContent = 'File selected! Click validate when ready.';
            validateBtn.disabled = false;
        }

        function clearFileSelection() {
            currentFile = null;
            fileInput.value = '';
            fileSelected.classList.remove('active');
            fileName.textContent = 'or drag and drop your file here';
            validateBtn.disabled = true;
        }

        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' B';
            if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
            return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
        }

        // Validate button click
        validateBtn.addEventListener('click', async () => {
            if (!currentFile) return;

            // Reset UI
            errorDiv.classList.remove('active');
            results.classList.remove('active');
            progress.classList.add('active');
            validateBtn.disabled = true;
            
            // Animate progress
            progressBar.style.width = '0%';
            setTimeout(() => progressBar.style.width = '30%', 100);
            progressText.innerHTML = '<span class="progress-spinner"></span>Uploading and processing...';

            const formData = new FormData();
            formData.append('csv', currentFile);
            formData.append('skipSmtp', skipSmtp.checked);

            try {
                const response = await fetch('/upload-csv', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || 'Validation failed');
                }

                progressBar.style.width = '100%';
                progressText.innerHTML = '<span class="progress-spinner"></span>Complete!';

                const data = await response.json();
                
                // Show results
                setTimeout(() => {
                    progress.classList.remove('active');
                    results.classList.add('active');
                    displayStats(data.summary);
                    setupDownload(data.csv);
                    validateBtn.disabled = false;
                }, 800);

            } catch (error) {
                progress.classList.remove('active');
                errorDiv.textContent = `‚ùå Error: ${error.message}`;
                errorDiv.classList.add('active');
                validateBtn.disabled = false;
            }
        });

        function displayStats(summary) {
            const disposable = summary.disposable || 0;
            const roleAccounts = summary.roleAccounts || 0;
            
            statsGrid.innerHTML = `
                <div class="stat-card">
                    <div class="stat-value">${summary.total}</div>
                    <div class="stat-label">Total Emails</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value success">${summary.valid}</div>
                    <div class="stat-label">Valid</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value error">${summary.invalid}</div>
                    <div class="stat-label">Invalid</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value warning">${disposable}</div>
                    <div class="stat-label">Disposable</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value accent">${roleAccounts}</div>
                    <div class="stat-label">Role Accounts</div>
                </div>
            `;
        }

        function setupDownload(csvContent) {
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = URL.createObjectURL(blob);
            downloadBtn.href = url;
        }

        // Copy code function for API examples
        function copyCode(button, codeId) {
            const code = document.getElementById(codeId).textContent;
            navigator.clipboard.writeText(code).then(() => {
                button.textContent = 'Copied!';
                setTimeout(() => {
                    button.textContent = 'Copy';
                }, 2000);
            });
        }

        // Make copyCode available globally
        window.copyCode = copyCode;
    </script>
